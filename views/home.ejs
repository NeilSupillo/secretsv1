<%- include('partials/header') %>
<div class="text-center mt-5">
  <div class="container">
    <h1>Secret's User Submitted</h1>

    <% for (let i = 0; i < usersWithSecrets.length && i < 3; i++) { %> <% let
    user = usersWithSecrets[i]; %> <% for (let j = 0; j < user.secrets.length &&
    j < 3; j++) { %>
    <p class="secret-text"><%= user.secrets[j].secret %></p>
    <% } %> <% } %>
  </div>
</div>
<div class="jumbotron centered">
  <div class="container">
    <h1 class="display-3">Secrets</h1>
    <i class="key-logo fas fa-key fa-6x"></i>
    <p class="lead">"Don't keep your secrets, share them anonymously!"</p>
    <hr />
    <a class="btn btn-light btn-lg" href="/register" role="button">Register</a>
    <a class="btn btn-dark btn-lg" href="/login" role="button">Login</a>
  </div>
</div>

<%- include('partials/footer') %>
